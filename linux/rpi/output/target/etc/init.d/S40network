#!/bin/sh
#
# Start the network....
#

case "$1" in
  start)
	 	
	echo -n "Starting network..."
	echo -n "Manual 5 seconds delay.. waiting for USB-ethernet to be ready....."
	sleep 5
	echo -n "Delay is over!!!"
	/sbin/ifup -a
	;;
  stop)
	echo -n "Stopping network..."
	/sbin/ifdown -a
	;;
  restart|reload)
	"$0" stop
	"$0" start
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?
